<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/style.css">
  <title>Mobile Hour - Products price</title>
</head>
<body>
  <main>
    <%- include("partials/header.ejs") %>
      
    <section class="phone-list-all">
      <ul class="phone-list">
        <% for (const product of products) { %>

        <% if (product.price < 300) { %>
          <h1>Low price</h1>
          <article class="phone-card" id="phone1">
            <a href="#"><img src="/image/phone.png" alt="phone" height="300px"></a>
            <h2><%= product.product_name %></h2>
            <span>$<%= product.product_price %></span>
            <p><%= product.product_description %></p>
            <a href="product_checkout?id=<%= product.id %>" class="buy">Buy</a>
          </article>
        <% } else if (product.price < 800 && product.price > 300) { %>
          <h2>Middle class</h2>
          <article class="phone-card" id="phone2">
            <a href="#"><img src="/image/phone.png" alt="phone" height="300px"></a>
            <h2><%= product.product_name %></h2>
            <span>$<%= product.product_price %></span>
            <p><%= product.product_description %></p>
            <a href="product_checkout?id=<%= product.id %>" class="buy">Buy</a>
          </article>
        <% } else { %>
          <h2>Highend</h2>
          <article class="phone-card" id="phone3">
            <a href="#"><img src="/image/phone.png" alt="phone" height="300px"></a>
            <h2><%= product.product_name %></h2>
            <span>$<%= product.product_price %></span>
            <p><%= product.product_description %></p>
            <a href="product_checkout?id=<%= product.id %>" class="buy">Buy</a>
          </article>
        <% } %>

        <% } %>
           </ul>
    </section>
    
    <%- include("partials/footer.ejs") %>
  </main>
</body>