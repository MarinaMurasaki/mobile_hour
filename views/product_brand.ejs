<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/style.css">
  <title>Mobile Hour - Products price</title>
</head>
<body>
  <main>
    <%- include("partials/header.ejs") %>
      
    <section class="phone-list-all">
      <ul class="phone-list">
        <% for (const product of products) { %>
          <% if (product.brand == 'apple') { %>
            <h1><%= product.brand %></h1>
            <article class="phone-card" id="phone3-brand">
              <a href="/product_comment"><img src="/image/phone.png" alt="phone" height="300px"></a>
              <h2><%= product.product_name %></h2>
              <span>$<%= product.product_price %></span>
              <p><%= product.product_description %></p>
              <a href="product_checkout?id=<%= product.id %>">Buy</a>
            </article>
          <% } else if (product.brand == 'galaxy') { %>
            <h1><%= product.brand %></h1>
            <article class="phone-card" id="phone3-brand">
              <a href="/product_comment"><img src="/image/phone.png" alt="phone" height="300px"></a>
              <h2><%= product.product_name %></h2>
              <span>$<%= product.product_price %></span>
              <p><%= product.product_description %></p>
              <a href="product_checkout?id=<%= product.id %>">Buy</a>
            </article>
          <% } else { %>
            <h1><%= product.brand %></h1>
            <article class="phone-card" id="phone3-brand">
              <a href="/product_comment"><img src="/image/phone.png" alt="phone" height="300px"></a>
              <h2><%= product.product_name %></h2>
              <span>$<%= product.product_price %></span>
              <p><%= product.product_description %></p>
              <a href="product_checkout?id=<%= product.id %>">Buy</a>
            </article>
          <% } %>
        <% } %>
      </ul>
    </section>
    
    <%- include("partials/footer.ejs") %>
  </main>
</body>